<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<div data-behavior='messages'>
  <% @messages.each do |message| %>
    <div><strong><%= message.user.username %>: </strong><%= message.body %></div>
  <% end %>
</div>

<%= simple_form_for [@chatroom, Message.new], html: { id: 'message-input' } do |f| %>
  <%= f.input :body, label: false, input_html: { rows: 1, autofocus: true } %>
<% end %>
